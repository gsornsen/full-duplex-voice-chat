# Environment variables for Realtime Duplex Voice Demo

# Redis Configuration
# For Docker: use internal DNS (redis://redis:6379)
# For local dev: use localhost (redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Orchestrator Configuration
ORCHESTRATOR_HOST=0.0.0.0
ORCHESTRATOR_WEBRTC_PORT=8080
ORCHESTRATOR_WS_PORT=8081

# Worker Configuration
WORKER_NAME=tts-worker-0
WORKER_GRPC_HOST=0.0.0.0
WORKER_GRPC_PORT=7002
WORKER_METRICS_PORT=9090

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Model Configuration
DEFAULT_MODEL_ID=cosyvoice2-en-base
PRELOAD_MODEL_IDS=

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development
DEBUG=false

# LiveKit Agents Configuration (Phase 1 POC)
# Required for agent-based orchestrator (src/orchestrator/agent.py)
# These values match configs/livekit.yaml for local development
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret1234567890abcdefghijklmn

# Phase 1: OpenAI API (temporary - will be removed in Phases 2-3)
# Used for temporary STT/LLM/TTS during initial testing
# Will be replaced with custom WhisperX STT and gRPC TTS plugins
OPENAI_API_KEY=sk-your-openai-api-key
